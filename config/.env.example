# Gmail Configuration
GMAIL_USER_EMAIL=your.actual.email@gmail.com

# Gmail API Configuration
GMAIL_CREDENTIALS_FILE=credentials.json
GMAIL_TOKEN_FILE=token.json

# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=deepseek-r1:7b

# Application Settings
EMAIL_FETCH_LIMIT=100
DIGEST_SCHEDULE_TIME=08:00
LOG_LEVEL=INFO

# Storage Paths
EMAILS_STORAGE_PATH=data/emails
DRAFTS_STORAGE_PATH=data/drafts
LOGS_STORAGE_PATH=data/logs

# Optional: Custom Settings
MAX_RETRY_ATTEMPTS=3      # Maximum retry attempts for failed operations
DEBUG_MODE=false          # Enable debug mode for detailed logging